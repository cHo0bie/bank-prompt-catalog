{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "answer",
    "citations",
    "confidence"
  ],
  "properties": {
    "answer": {
      "type": "string",
      "minLength": 1
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": false
}